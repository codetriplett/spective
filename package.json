{
	"name": "spective",
	"version": "3.0.1",
	"description": "A simple way to create 2D graphics in your browser.",
	"author": "triplett",
	"license": "MIT",
	"main": "dist/spective.min.js",
	"scripts": {
		"test": "jest --watch",
		"build": "rimraf dist && esbuild src/index.js --outfile=dist/spective.min.js --bundle --minify --banner:js=//spective@v3.0.1 --legal-comments=linked",
		"build:watch": "esbuild src/index.js --outfile=preview/spective.min.js --bundle --watch",
		"start": "node preview/server.js"
	},
	"keywords": [
		"webgl",
		"sprite",
		"declarative"
	],
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/codetriplett/spective.git"
	},
	"bugs": {
		"url": "https://github.com/codetriplett/spective/issues"
	},
	"homepage": "https://github.com/codetriplett/spective#readme",
	"jest": {
		"testURL": "http://localhost",
		"setupFilesAfterEnv": [
			"./setupTests.js"
		]
	},
	"devDependencies": {
		"esbuild": "0.17.10",
		"jest": "26.6.3",
		"regenerator-runtime": "0.13.11",
		"rimraf": "3.0.2"
	}
}
